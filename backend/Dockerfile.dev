FROM node:20-slim

# Install build dependencies for native modules
RUN apt-get update && apt-get install -y \
    python3 \
    python3-dev \
    make \
    g++ \
    libpcap-dev \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY package*.json ./
RUN npm install

COPY tsconfig.json ./
COPY src ./src

EXPOSE 3000
EXPOSE 8001/udp
EXPOSE 8002
EXPOSE 8090

CMD ["npm", "run", "dev"]
