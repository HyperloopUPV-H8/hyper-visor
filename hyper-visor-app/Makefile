# Variables
IMAGE_NAME = vite-app
DEV_COMPOSE_FILE = docker-compose.dev.yml
PROD_DOCKERFILE = Dockerfile.prod
DEV_DOCKERFILE = Dockerfile.dev
PORT = 3000

## 游대 Desarrollo
dev-up:
	docker compose -f $(DEV_COMPOSE_FILE) up

dev-down:
	docker compose -f $(DEV_COMPOSE_FILE) down

dev-build:
	docker build -f $(DEV_DOCKERFILE) -t $(IMAGE_NAME)-dev .

## 游 Producci칩n
prod-build:
	docker build -f $(PROD_DOCKERFILE) -t $(IMAGE_NAME) .

prod-run:
	docker run -p $(PORT):80 $(IMAGE_NAME)

prod-down:
	@echo "Para producci칩n sin docker-compose, usa 'docker ps' y 'docker stop <id>' o docker-compose.prod.yml si tienes uno."

## 游닍 Docker Compose para producci칩n (opcional)
compose-prod-up:
	docker compose -f docker-compose.prod.yml up --build

compose-prod-down:
	docker compose -f docker-compose.prod.yml down

## 游빛 Limpieza
clean:
	docker system prune -f

## 游댍 Ver contenedores
ps:
	docker ps

## 游깷 Abrir navegador (solo macOS/Linux con xdg-open)
open:
	xdg-open http://localhost:$(PORT) || open http://localhost:$(PORT)
